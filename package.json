{
  "name": "risk-management",
  "version": "3.0.0",
  "description": "Template for the Learning Journey Building side-by-side extensions on SAP BTP",
  "author": "m.haug@sap.com",
  "license": "SAP SAMPLE CODE LICENSE",
  "repository": "https://github.com/SAP-samples/sap-learning-extension-suite",
  "dependencies": {
    "@sap-cloud-sdk/http-client": "3.21.0",
    "@sap-cloud-sdk/resilience": "3.12.0",
    "@sap/cds": "8.2.0",
    "@sap/cds-dk": "7.6.0",
    "@sap/xsenv": "^5.2.0",
    "@sap/xssec": "^4",
    "express": "^4",
    "passport": "^0.7.0",
    "@cap-js/hana": "^1"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "7.6.0",
    "@sap/ux-specification": "^1.120.17"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-risk-management": "cds watch --open risk-management/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "API_BUSINESS_PARTNER": {
        "kind": "odata",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "credentials": {
          "destination": "A2X_Business_Partner",
          "path": "/sap/opu/odata/sap/API_BUSINESS_PARTNER/"
        }
      },
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "db.sqlite"
        }
      },
      "MY_ON_PREM_SERVICE": {
        "kind": "odata",
        "credentials": {
          "destination": "MyLocalServer1"
        }
      },
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      }
    }
  },
  "sapux": [
    "app/risk-management"
  ]
}
